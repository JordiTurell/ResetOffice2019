Add-Type -AssemblyName System.Windows.Forms
Add-Type -AssemblyName System.Drawing

# Duraci칩n total (en minutos)
$end = (Get-Date).AddMinutes(500)

while ((Get-Date) -lt $end) {
    $pos = [System.Windows.Forms.Cursor]::Position

    # --- Movimiento del rat칩n en peque침o cuadrado ---
    [System.Windows.Forms.Cursor]::Position = New-Object System.Drawing.Point ($pos.X+100), $pos.Y
    Start-Sleep -Milliseconds 200
    [System.Windows.Forms.Cursor]::Position = New-Object System.Drawing.Point ($pos.X+100), ($pos.Y+100)
    Start-Sleep -Milliseconds 200
    [System.Windows.Forms.Cursor]::Position = New-Object System.Drawing.Point ($pos.X), ($pos.Y+100)
    Start-Sleep -Milliseconds 200
    [System.Windows.Forms.Cursor]::Position = $pos

    # --- Simular pulsaci칩n de tecla ScrollLock ---
    [System.Windows.Forms.SendKeys]::SendWait("{SCROLLLOCK}")
    Start-Sleep -Milliseconds 200
    [System.Windows.Forms.SendKeys]::SendWait("{SCROLLLOCK}")

    # Esperar 1 minuto antes del siguiente ciclo
    Start-Sleep -Seconds 10
}
